<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_claro">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/detailTitleTextView"
        android:layout_width="324dp"
        android:layout_height="49dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/detailImageView"
        android:layout_width="101dp"
        android:layout_height="139dp"
        android:layout_below="@+id/videoView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="9dp"
        android:layout_toStartOf="@+id/textView25"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/detailOtherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailTitleTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="615dp"
        android:layout_marginEnd="340dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/detailYearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailOtherTextView"
        android:layout_marginTop="200dp"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="613dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/amarillo"
        android:text="Agregar a mi lista de seguimiento"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="47dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Titulo de la serie o pelicula"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="289dp"
        android:layout_height="27dp"
        android:layout_below="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_alignEnd="@+id/textView18"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Titulo de la serie o pelicula"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="289dp"
        android:layout_height="27dp"
        android:layout_below="@+id/textView19"
        android:layout_alignStart="@+id/textView19"
        android:layout_alignEnd="@+id/textView19"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Titulo de la serie o pelicula"
        android:textSize="12sp" />

    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_below="@+id/textView23"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="245dp"
        android:layout_height="93dp"
        android:layout_below="@+id/videoView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="28dp"
        android:text="Signosis" />

</RelativeLayout>
