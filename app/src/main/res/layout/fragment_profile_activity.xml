<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gris_claro"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white">
            <FrameLayout
                android:background="@drawable/bordeabajo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/imageViewCircular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/perfil"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textVie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Jose Cardoso"
                    android:textColor="#000000"
                    android:textSize="24sp"/>
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="340dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/baseline_settings_24" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@color/gris_claro">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="12dp"
                        android:text="Calificar y obtener recomendaciones"
                        android:textColor="#000000"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="105dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:textColor="#000000"
                    android:text="Calificaciones"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/gris_ceniza"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:text="0"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="170dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@color/gris_claro">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="12dp"
                        android:text="Agregar a listas"
                        android:textColor="#000000"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="105dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:text="Listas"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/gris_ceniza"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:text="4"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="320dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@color/gris_claro">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="12dp"
                        android:text="Aun no hay comentarios"
                        android:textColor="#000000"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="105dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:text="Comentarios"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/gris_ceniza"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:text="0"/>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/white"
            android:layout_marginTop="270dp">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/linea"
                android:fontFamily="@font/roboto_bold"
                android:padding="7dp"
                android:text="   Lista de seguimiento"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Crea una lista de seguimiento para no perderte ninguna pelicula o serie de tv."
                android:textColor="#000000" />

            <Button
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:backgroundTint="@color/amarillo"
                android:text="Empieza tu lista de seguimiento"
                android:textColor="#000000"
                android:textStyle="bold" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="480dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/linea"
                android:fontFamily="@font/roboto_bold"
                android:padding="7dp"
                android:text="   Vistas recientes"
                android:textColor="#000000"
                android:textSize="24sp"/>
            <TextView
                android:textColor="#000000"
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/roboto_bold"
                android:text="No has visitado ninguna pagina rencientemente" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="595dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/linea"
                android:fontFamily="@font/roboto_bold"
                android:padding="7dp"
                android:text="   Personas Favoritas"
                android:textColor="#000000"
                android:textSize="24sp"/>
            <TextView
                android:textColor="#000000"
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/roboto_bold"
                android:text="No has visitado ninguna pagina rencientemente" />
        </FrameLayout>
    </FrameLayout>
</FrameLayout>